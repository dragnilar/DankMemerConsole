<mah:MetroWindow
    x:Class="DankMemerConsole.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=System.ComponentModel.TypeConverter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:local="clr-namespace:DankMemerConsole"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:DankMemerConsole.ViewModels"
    Title="Dank Memer Console"
    Width="1200"
    Height="800"
    d:DataContext="{d:DesignInstance {x:Type viewModels:MainWindowViewModel}}"
    Background="Black"
    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
    BorderThickness="1"
    DataContext="{dxmvvm:ViewModelSource Type={x:Type viewModels:MainWindowViewModel}}"
    FontFamily="Segoe UI Variable"
    FontWeight="Bold"
    Icon="../pepe.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:EventToCommand Command="{Binding LoadedCommand}" EventName="Loaded" />
    </dxmvvm:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Discord Username:"
            Style="{StaticResource MahApps.Styles.Label}" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Style="{StaticResource MahApps.Styles.TextBox}"
            Text="{Binding DiscordUserName, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Grid.Row="1"
            Grid.Column="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Discord Password:"
            Style="{StaticResource MahApps.Styles.Label}" />
        <TextBox
            Grid.Row="1"
            Grid.Column="3"
            Style="{StaticResource MahApps.Styles.TextBox}"
            Text="{Binding DiscordPassword, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Name="ButtonLogin"
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="0,15,0,0"
            Command="{Binding LogIntoDiscordCommand}"
            Content="Login to Discord"
            IsEnabled="{Binding LoggedIntoDiscord, Converter={dxmvvm:BooleanNegationConverter}}"
            Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
        <Label
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="5" />
        <StackPanel
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Orientation="Horizontal">
            <Button
                Name="ButtonBeg"
                Command="{Binding BegCommand}"
                Content="pls beg"
                IsEnabled="{Binding LoggedIntoDiscord}"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Name="ButtonSearch"
                Command="{Binding SearchCommand}"
                Content="pls search"
                IsEnabled="{Binding LoggedIntoDiscord}"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Command="{Binding FishCommand}"
                Content="pls fish"
                IsEnabled="{Binding LoggedIntoDiscord}"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Command="{Binding HuntCommand}"
                Content="pls hunt"
                IsEnabled="{Binding LoggedIntoDiscord}"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Command="{Binding DigCommand}"
                Content="pls dig"
                IsEnabled="{Binding LoggedIntoDiscord}"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Name="ButtonCrime"
                Command="{Binding CrimeCommand}"
                Content="pls crime"
                IsEnabled="{Binding LoggedIntoDiscord}"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Name="ButtonHighLow"
                Command="{Binding HighLowCommand}"
                Content="pls highlow"
                IsEnabled="{Binding LoggedIntoDiscord}"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Name="ButtonSlots"
                Command="{Binding SlotsCommand}"
                Content="pls slots max"
                IsEnabled="{Binding LoggedIntoDiscord}"
                Style="{StaticResource MahApps.Styles.Button.Square.Accent}" />
        </StackPanel>
        <Label
            Grid.Row="5"
            Grid.Column="1"
            Content="Log / Last Message"
            Style="{StaticResource MahApps.Styles.Label}" />
        <TextBox
            Name="TextBoxStatus"
            Grid.Row="6"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            Style="{StaticResource MahApps.Styles.TextBox}"
            Text="{Binding LogText}"
            VerticalScrollBarVisibility="Auto" />
    </Grid>
</mah:MetroWindow>
