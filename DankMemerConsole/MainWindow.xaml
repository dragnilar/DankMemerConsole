<Window
    x:Class="DankMemerConsole.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:local="clr-namespace:DankMemerConsole"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:services="clr-namespace:DankMemerConsole.Services"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:viewModels="clr-namespace:DankMemerConsole.ViewModels"
    xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Dank Memer Console"
    MinWidth="1200"
    MinHeight="800"
    d:DataContext="{d:DesignInstance {x:Type viewModels:MainWindowViewModel}}"
    ui:ThemeManager.IsThemeAware="True"
    ui:WindowHelper.FixMaximizedWindow="True"
    ui:WindowHelper.UseModernWindowStyle="True"
    DataContext="{dxmvvm:ViewModelSource Type={x:Type viewModels:MainWindowViewModel}}"
    FontFamily="Segoe UI Variable"
    FontWeight="Bold"
    Icon="../pepe.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:EventToCommand Command="{Binding LoadedCommand}" EventName="Loaded" />
        <dxmvvm:EventToCommand Command="{Binding ClosingCommand}" EventName="Closing" />
    </dxmvvm:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Orientation="Horizontal">
            <Button Content="Test" />
            <Button Content="Test" />
            <Button Content="Test" />
            <TextBox />
        </StackPanel>
        <Border
            Grid.Row="3"
            Grid.RowSpan="5"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            BorderBrush="Green"
            BorderThickness="5">
            <wpf:WebView2 Name="WebView2" Source="https://www.discord.com">
                <dxmvvm:Interaction.Behaviors>
                    <services:WebView2Service />
                </dxmvvm:Interaction.Behaviors>
            </wpf:WebView2>
        </Border>
        <StackPanel
            Grid.Row="8"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            Orientation="Horizontal">
            <Button
                Name="ButtonBeg"
                Command="{Binding SendDankMessageCommand}"
                CommandParameter="pls beg"
                Content="pls beg"
                IsEnabled="{Binding LoggedIntoDiscord}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Name="ButtonSearch"
                Command="{Binding SendDankMessageCommand}"
                CommandParameter="pls search"
                Content="pls search"
                IsEnabled="{Binding LoggedIntoDiscord}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Command="{Binding SendDankMessageCommand}"
                CommandParameter="pls fish"
                Content="pls fish"
                IsEnabled="{Binding LoggedIntoDiscord}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Command="{Binding SendDankMessageCommand}"
                CommandParameter="pls hunt"
                Content="pls hunt"
                IsEnabled="{Binding LoggedIntoDiscord}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Command="{Binding SendDankMessageCommand}"
                CommandParameter="pls dig"
                Content="pls dig"
                IsEnabled="{Binding LoggedIntoDiscord}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Name="ButtonCrime"
                Command="{Binding SendDankMessageCommand}"
                CommandParameter="pls crime"
                Content="pls crime"
                IsEnabled="{Binding LoggedIntoDiscord}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Name="ButtonHighLow"
                Command="{Binding SendDankMessageCommand}"
                CommandParameter="pls highlow"
                Content="pls highlow"
                IsEnabled="{Binding LoggedIntoDiscord}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Name="ButtonPM"
                Command="{Binding SendDankMessageCommand}"
                CommandParameter="pls pm"
                Content="pls pm"
                IsEnabled="{Binding LoggedIntoDiscord}" />
            <Separator Width="15" Visibility="Hidden" />
            <Button
                Name="ButtonSlots"
                Command="{Binding SendDankMessageCommand}"
                CommandParameter="pls slots max"
                Content="pls slots max"
                IsEnabled="{Binding LoggedIntoDiscord}" />
        </StackPanel>
        <Button
            Name="ButtonLogin"
            Grid.Row="9"
            Grid.Column="1"
            Command="{Binding InjectAPICommand}"
            Content="Inject API And Go To Dank Channel" />
        <Button
            Name="ButtonRegisterChannel"
            Grid.Row="9"
            Grid.Column="2"
            Command="{Binding RegisterChannelCommand}"
            Content="Set Current Channel For API" />
    </Grid>
</Window>
